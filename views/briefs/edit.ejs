<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= brief.firstname %> Brief</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/briefs/<%= brief._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="brief[firstname]" value="<%= brief.firstname %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="brief[lastname]" value="<%= brief.lastname %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/briefs">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
